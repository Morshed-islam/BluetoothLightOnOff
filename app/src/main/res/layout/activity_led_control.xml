<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED Controller "
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#f44336"
        android:textSize="23dp" />

    <EditText
        android:id="@+id/readTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="80dp"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="text"
        android:textColor="#f44336"
        android:textSize="23dp" />


    <Button
        android:id="@+id/on_btn"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="195dp"
        android:fadingEdge="none"
        android:textColor="#212121"
        android:textSize="30sp"
        android:fontFamily="sans-serif-smallcaps"
        android:background="@drawable/rounded_button"
        android:text="ON"
        android:typeface="monospace" />

    <Button
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:textColor="#212121"
        android:fadingEdge="none"
        android:id="@+id/off_btn"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="30sp"
        android:background="@drawable/rounded_button"
        android:text="OFF"
        android:typeface="monospace" />


    <Button
        android:id="@+id/sent_btn"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_below="@+id/off_btn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-230dp"
        android:layout_marginEnd="239dp"
        android:layout_marginRight="239dp"
        android:background="@drawable/rounded_button"
        android:fadingEdge="none"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Sent"
        android:textColor="#212121"
        android:textSize="30sp"
        android:typeface="monospace" />

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="500dp"
        android:fontFamily="sans-serif-smallcaps"
        android:fadingEdge="none"
        android:textColor="#212121"
        android:id="@+id/dis_btn"
        android:textSize="20sp"
        android:background="@drawable/rounded_button"
        android:text="DISCONNECT"
        android:typeface="monospace" />

    <Button
        android:id="@+id/abt_btn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:textColor="#212121"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_alignTop="@+id/dis_btn"
        android:textSize="20sp"
        android:background="@drawable/rounded_button"
        android:text="ABOUT"
        android:typeface="monospace"
        android:layout_alignParentRight="true" />


</RelativeLayout>